{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    <!-- Entity 를 가져오는 mustache 문법 -->
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
        <!-- 이 부분까지 article 사용 -->
    {{/article}}
    </tbody>
</table>
<!-- 수정 폼으로 가는 링크 -->
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>
<!-- 목록으로 가는 링크 -->
<a href="/articles">Go To List</a>

{{>layouts/footer}}